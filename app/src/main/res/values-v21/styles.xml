<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--<style name="AppTheme" parent="android:Theme.Material.Light">-->
    <!--</style>-->

    <!-- inherit from the material theme -->
    <style name="TakeMeAppTheme" parent="android:Theme.Material.Light">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <!--<item name="android:colorPrimary">@color/light</item>-->
        <!--&lt;!&ndash;   darker variant for the status bar and contextual app bars &ndash;&gt;-->
        <!--<item name="android:colorPrimaryDark">@color/primaryDark</item>-->
        <!--&lt;!&ndash;   theme UI controls like checkboxes and text fields &ndash;&gt;-->
        <!--<item name="android:colorAccent">@color/accent</item>-->

        <item name="android:actionBarStyle">@style/TakeMeTheme.MyActionBar</item>
        <item name="android:windowBackground">@color/app_background</item>
        <item name="android:buttonStyle">@style/TakeMeTheme.Buttons</item>

    </style>

    <style name="TakeMeTheme.Buttons" parent="@android:style/Widget.Material.Light.Button">
        <item name="android:background">@color/purple</item>
        <item name="android:radius">10dp</item>
        <item name="android:textColor">@color/app_background</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ActionBar styles -->
    <style name="TakeMeTheme.MyActionBar"
        parent="@android:style/Widget.Material.Light.ActionBar">
        <item name="android:background">@color/color_action_bar</item>
        <item name="android:titleTextStyle">@style/PetsiTheme.MyActionBar.TitleTextStyle</item>
        <item name="android:logo">@drawable/actionbar_space_between_icon_and_title</item>
        <item name="android:displayOptions">useLogo|showHome|showTitle</item>

    </style>

    <style name="PetsiTheme.MyActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">#000000</item>
    </style>

</resources>
